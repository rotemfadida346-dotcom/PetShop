generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Auth Models ────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  hashedPassword String?
  role          UserRole  @default(CUSTOMER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  subscriptions Subscription[]
  addresses     Address[]
  reviews       Review[]
  cartItems     CartItem[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum UserRole {
  CUSTOMER
  ADMIN
}

// ─── Address ────────────────────────────────────────────

model Address {
  id        String  @id @default(cuid())
  userId    String
  label     String? // "Home", "Work", etc.
  firstName String
  lastName  String
  line1     String
  line2     String?
  city      String
  state     String
  zip       String
  country   String  @default("US")
  isDefault Boolean @default(false)

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders Order[]
}

// ─── Product Models ─────────────────────────────────────

model Product {
  id          String        @id @default(cuid())
  name        String
  slug        String        @unique
  description String        @db.Text
  benefits    String?       @db.Text
  ingredients String?       @db.Text
  whoIsFor    String?       @db.Text
  shortDesc   String?
  price       Float
  compareAt   Float?
  currency    String        @default("USD")
  petType     PetType
  category    ProductCategory
  images      ProductImage[]
  faqs        ProductFaq[]
  tags        String[]
  isActive    Boolean       @default(true)
  isFeatured  Boolean       @default(false)
  stock       Int           @default(0)
  weight      Float?
  weightUnit  String?       @default("lbs")
  sku         String?       @unique
  stripePriceId     String?
  stripeProductId   String?
  subscriptionDiscount Float @default(10) // percentage discount for subscriptions
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  orderItems    OrderItem[]
  cartItems     CartItem[]
  reviews       Review[]
  subscriptions Subscription[]
  quizResults   QuizResult[]
}

model ProductImage {
  id        String  @id @default(cuid())
  productId String
  url       String
  alt       String?
  position  Int     @default(0)

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model ProductFaq {
  id        String @id @default(cuid())
  productId String
  question  String
  answer    String @db.Text
  position  Int    @default(0)

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

enum PetType {
  DOG
  CAT
}

enum ProductCategory {
  FOOD
  TREATS
  LITTER
  SUPPLEMENTS
  TOYS
  ACCESSORIES
}

// ─── Cart ───────────────────────────────────────────────

model CartItem {
  id        String  @id @default(cuid())
  userId    String?
  sessionId String?
  productId String
  quantity  Int     @default(1)
  isSubscription Boolean @default(false)
  intervalWeeks  Int?    // 2, 4, or 6
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId, isSubscription])
  @@index([sessionId])
}

// ─── Order Models ───────────────────────────────────────

model Order {
  id              String      @id @default(cuid())
  userId          String?
  email           String
  status          OrderStatus @default(PENDING)
  subtotal        Float
  tax             Float       @default(0)
  shipping        Float       @default(0)
  discount        Float       @default(0)
  total           Float
  currency        String      @default("USD")
  stripeSessionId String?     @unique
  stripePaymentId String?
  addressId       String?
  shippingName    String?
  shippingLine1   String?
  shippingLine2   String?
  shippingCity    String?
  shippingState   String?
  shippingZip     String?
  shippingCountry String?
  notes           String?     @db.Text
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  user    User?       @relation(fields: [userId], references: [id])
  address Address?    @relation(fields: [addressId], references: [id])
  items   OrderItem[]
}

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  productId String
  name      String
  price     Float
  quantity  Int
  image     String?

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

// ─── Subscription ───────────────────────────────────────

model Subscription {
  id                   String             @id @default(cuid())
  userId               String
  productId            String
  status               SubscriptionStatus @default(ACTIVE)
  intervalWeeks        Int                // 2, 4, or 6
  quantity             Int                @default(1)
  pricePerDelivery     Float
  stripeSubscriptionId String?            @unique
  stripePriceId        String?
  nextDeliveryAt       DateTime?
  pausedAt             DateTime?
  cancelledAt          DateTime?
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])
}

enum SubscriptionStatus {
  ACTIVE
  PAUSED
  CANCELLED
}

// ─── Reviews ────────────────────────────────────────────

model Review {
  id        String   @id @default(cuid())
  userId    String
  productId String
  rating    Int
  title     String?
  body      String?  @db.Text
  isVerified Boolean @default(false)
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
}

// ─── Quiz ───────────────────────────────────────────────

model QuizResult {
  id          String   @id @default(cuid())
  sessionId   String?
  petType     PetType
  petName     String?
  petAge      String?
  petSize     String?
  petBreed    String?
  sensitivities String[]
  recommendations String[] // product IDs
  createdAt   DateTime @default(now())

  products Product[]
}
